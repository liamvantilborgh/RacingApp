@model RacingApp.Core.DTO_S.PilotRaceTeamDTO

@{
    ViewData["Title"] = "DeletePilotRaceTeam";
}

<h1>Delete</h1>

<h3>Are you sure you want to remove the pilot "@Model.Pilot.Name @Model.Pilot.FirstName" from the team "@Model.Team.Name" for the race "@Model.Race.Name"?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Team
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Name) 
        </dd>
        <dt class="col-sm-2">
            Pilot
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pilot.Name) @Html.DisplayFor(model => model.Pilot.FirstName)
        </dd>
    </dl>

    <form asp-action="DeletePilotRaceTeams">
        <input type="hidden" asp-for="PilotId" />
        <input type="hidden" asp-for="RaceId" />
        <input type="hidden" asp-for="TeamId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-route-id="@Model.RaceId">Back to Race</a>
    </form>
</div>
