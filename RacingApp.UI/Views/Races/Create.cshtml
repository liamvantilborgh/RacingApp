@model RaceSeasonCircuit

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Races</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Race.Name" class="control-label"></label>
                <input asp-for="Race.Name" class="form-control" />
                <span asp-validation-for="Race.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Race.Season" class="control-label"></label>
                <input type="hidden" asp-for="Race.SeasonId" />
                @Html.DropDownListFor(m => m.SeasonId, Model.SeasonDropDown, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Race.Circuit" class="control-label"></label>
                <input type="hidden" asp-for="Race.CircuitId" />
                @Html.DropDownListFor(m => m.CircuitId, Model.CircuitDropDown, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Race.Startdate" class="control-label"></label>
                <input asp-for="Race.Startdate" class="form-control" />
                <span asp-validation-for="Race.Startdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Race.Enddate" class="control-label"></label>
                <input asp-for="Race.Enddate" class="form-control" />
                <span asp-validation-for="Race.Enddate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
